{
  // Harness runtime config (JSONC).
  "mux": {
    // VS Code style action IDs -> keybinding list (first entry is displayed in UI).
    "keybindings": {
      "mux.conversation.new": ["ctrl+t"],
      "mux.conversation.next": ["ctrl+j"],
      "mux.conversation.previous": ["ctrl+k"],
      "mux.app.interrupt-all": ["ctrl+c"]
      // Optional:
      // "mux.app.quit": ["ctrl+q"],
      // "mux.conversation.archive": ["alt+a"],
      // "mux.conversation.delete": ["alt+d"]
    }
  },
  "debug": {
    // Global debug/instrumentation gate.
    "enabled": true,
    // Overwrite debug/perf artifacts on startup to keep each run clean.
    "overwriteArtifactsOnStart": true,
    "perf": {
      "enabled": true,
      "filePath": ".harness/perf-startup.jsonl"
    },
    "mux": {
      "validateAnsi": false,
      "resizeMinIntervalMs": 33,
      "ptyResizeSettleMs": 75,
      "startupSettleQuietMs": 300,
      "serverSnapshotModelEnabled": true
    }
  }
}
