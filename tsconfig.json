{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "lib": ["ES2023"],
    "types": ["node"],
    "allowJs": false,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "test/**/*.ts",
    "scripts/**/*.ts",
    "packages/harness-ai/src/**/*.ts",
    "packages/nim-core/src/**/*.ts",
    "packages/nim-ui-core/src/**/*.ts",
    "packages/nim-test-tui/src/**/*.ts"
  ]
}
